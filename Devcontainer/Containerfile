# Use the Red Hat Ansible Dev Tools base image
FROM registry.redhat.io/ansible-automation-platform-25/ansible-dev-tools-rhel8:latest

# Create a new user named devansible
RUN useradd -m -s /bin/bash devansible

# Switch to the new user
USER devansible

# Set work directory
WORKDIR /home/devansible

# Optional: Add any additional setup commands or files here

# Default command
CMD ["/bin/bash"]